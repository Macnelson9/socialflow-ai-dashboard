{
  "name": "socialflow-desktop",
  "version": "1.0.0",
  "description": "SocialFlow Dashboard Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npx vite",
    "test": "jest",
    "build": "tsc && npx vite build",
    "preview": "npx vite preview",
    "test:run": "vitest run",
    "electron:dev": "concurrently \"npm run dev\" \"npx wait-on tcp:5173 && npx electron .\"",
    "electron:build": "npx vite build && electron-builder",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "latest",
    "@stellar/stellar-sdk": "^13.3.0",
    "@types/dexie": "^1.3.32",
    "axios": "^1.13.5",
    "dexie": "^4.3.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.10.0",
    "soroban-client": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fake-indexeddb": "^3.1.7",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.socialflow.app",
    "productName": "SocialFlow",
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "directories": {
      "output": "dist-electron"
    }
  }
}
