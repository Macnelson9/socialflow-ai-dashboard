{
  "name": "socialflow-desktop",
  "version": "1.0.0",
  "description": "SocialFlow Dashboard Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npx vite",
    "build": "tsc && npx vite build",
    "preview": "npx vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npx wait-on tcp:5173 && npx electron .\"",
    "electron:build": "npx vite build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "latest",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.10.0",
    "@stellar/stellar-sdk": "^13.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.socialflow.app",
    "productName": "SocialFlow",
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "directories": {
      "output": "dist-electron"
    }
  }
}
